{
  "name": "vk-media-dump",
  "version": "1.0.0",
  "description": "Скачивание медиа из VK",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.vkmedia.dump",
    "productName": "VK Media Dump",
    "files": [
      "main.js",
      "index.html",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!__pycache__", "!*.pyc", "!workdir"]
      },
      {
        "from": "../extension",
        "to": "extension"
      },
      {
        "from": "ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
