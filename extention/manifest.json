{
  "manifest_version": 3,
  "name": "VK Media Dump",
  "description": "Сохранение видео и голосовых из диалогов ВК",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://vk.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://vk.com/im*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
